<div class="row row-cols-3">
  <div class=" col-12 col-lg-3 col-sm-12 pe-1 ps-1">

    <div class="user--container">

      <%= render 'shared/profile_div' %>

    </div>

  </div>

  <div class="col-lg-6 col-sm-12">

    <div class="post--container mb-5 p-3">

      <%= render 'shared/post-feed_new' %>

    </div>

    <div class="feed--container_title mb-1">
       <div class="container d-flex justify-content-around align-items-center">
          <h1>main feed</h1>
          <span class="dot"></span>
          <h1>profile feed</h1>
        </div>
    </div>

    <div class="feed--container p-3">

      <%= render 'shared/post_display' %>

    </div>

  </div>

  <div class="col-lg-3 col-sm-12">

     <div class="search--container mb-5">

      <%= render 'shared/search_bar' %>

      </div>

      <div class="msg--container_title mb-1">
        <div class="container d-flex justify-content-around align-items-center">
          <h1>messages</h1>
          <span class="dot"></span>
          <h1>notifications</h1>
        </div>
      </div>

      <div class="msg--container p-3">

      </div>

  </div>

</div>

