<div class="row">

  <div class=" col-12 col-lg-3 col-sm-12 pe-1 ps-1">

    <div class="user--container d-none d-lg-block">
      <%= render 'shared/profile_div' %>
    </div>

      <div class="search--container mb-3 d-block d-lg-none">
        <%= render 'shared/search_bar' %>
      </div>

  </div>

  <div class="col-lg-6 col-sm-12">

    <div class="post--container mb-3 p-3">
      <%= render 'shared/post-feed_new' %>
    </div>

       <!-- main container desktop -->
    <div class="feed--container p-3" id="main-container">
      <div class="profile-nav d-none d-lg-flex d-md-flex" style="width: 80%">
        <h5 class="profile-nav-item" id="about-me">about</h5>
        <span class="dot"></span>
        <h5 class="profile-nav-item active-nav" id="activity">activity</h5>
        <span class="dot"></span>
        <h5 class="profile-nav-item" id="friends">friends</h5>
        <span class="dot"></span>
        <h5 class="profile-nav-item" id="jams">jams</h5>
      </div>


      <!-- main container mobile -->
      <div class="feed--container p-sm-3 p-lg-0 p-md-0" id="main-container">
        <div class="profile-nav d-flex d-md-none d-lg-none align-items-center" style="width: 90%">
          <span class="profile-nav-item px-3" id="about-me"><i class="fas fa-user"></i></span><!-- about me -->
          <span class="dot"></span>
          <span class="profile-nav-item active-nav px-3" id="activity"><i class="fas fa-file mobile-icon"></i></span><!-- activity-->
          <span class="dot"></span>
          <span class="profile-nav-item px-3" id="friends"><i class="fas fa-people-arrows mobile-icon"></i></span><!-- friends -->
          <span class="dot"></span>
          <span class="profile-nav-item px-3" id="jams"><i class="fas fa-music mobile-icon"></i></span>
        </div>
      </div>


      <!-- about me nav -->
      <div id="about-me-card" style="display: none;">
        <%= render 'shared/profile_about_me' %>
      </div>

      <!-- activity nav -->
      <div id="activity-card">
        <% if @posts.empty? %>
          <div style="display: flex; justify-content: center; align-items: center; margin: 20px;">
            <%= image_tag 'no_posts_icon.svg', style: "width: 10%; margin: 15px;" %>
            <p>You haven't posted anything yet</p>
          </div>
        <% else %>
          <%= render 'shared/post_display' %>
        <% end %>
      </div>

      <!-- friends nav -->
      <div id="friends-card" style="display: none;">
        <p class="text-center">Under Construction</p>
      </div>

      <!-- jams nav -->
      <div id="jams-card" style="display: none;">
        <p class="text-center">Under Construction</p>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-sm-12 col-12">

    <div class="search--container mb-5 d-none d-lg-block">
      <%= render 'shared/search_bar' %>
    </div>

    <div class="msg--container p-3 d-none d-lg-block" id="feed-chat-container">
      <%= render 'shared/chat_memberships', chat_memberships: @chat_memberships %>
    </div>

  </div>

  </div>




