<div class="row">
<div class="sign-up col-12 col-lg-8 mx-lg-auto p-0 shadow">

  <div class="signup--title">
    <h2 class="h2 p-3 text-center">Sign up</h2>
  </div>


<div class="form--signup col-12 col-lg-10 mx-lg-auto">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'e-mail',
                    class: 'signup--input',
                    input_html: { autocomplete: "email" }%>

        <div class="row">
          <div class="col-12 col-lg-6 col-md-6">
          <%= f.input :first_name,
                      required: true,
                      label: false,
                      placeholder: 'first name',
            autofocus: true%>
          </div>
          <div class="col-12 col-lg-6 col-md-6">
          <%= f.input :last_name,
                      required: true,
                      label: false,
                      placeholder: 'last name',
                      autofocus: true%>
          </div>
        </div>
        <%= f.input :username,
                    required: true,
                    label: false,
                    placeholder: 'username',
                    autofocus: true%>
        <%= f.input :description,
                    required: true,
                    label: false,
                    placeholder: 'Bio',
                    autofocus: true%>
        <%= f.input :address,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'address',
                    id: "user_address"%>

        <%= f.simple_fields_for :skills do |skill_form| %>
          <%= skill_form.input :instrument, as: :select, collection: Skill::INSTRUMENTS,
          label: false, prompt: 'Choose your instrument', label_html: { class: 'placeholder-text' } %>
          <%= skill_form.input :experience, as: :select, collection: Skill::EXPERIENCE, label: false,
           prompt: 'Experience', label_html: { class: 'placeholder-text' } %>

        <% end %>

        <%= f.input :photo, as: :file %>

        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'password',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder: 'Confirm your password',
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
  </div>

</div>
</div>

<%= render "devise/shared/links" %>
