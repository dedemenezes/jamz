<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="navbar-container">
    <% if user_signed_in? %>
      <%= link_to image_tag('Jamz.svg', style: "width: 100px;"), feed_users_path %>
    <% else %>
      <%= link_to image_tag('Jamz.svg', style: "width: 100px;"), root_path %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if user_signed_in? %>
      <div>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Home", feed_users_path, id: "nav-home", class: "nav-link", data: { turbolinks: false } %>
          </li>
          <li class="nav-item">
            <%= link_to "Groups", groups_path, id: "nav-groups", class: "nav-link", data: { turbolinks: false } %>
          </li>
          <li class="nav-item">
            <%= link_to "Chatrooms", chat_memberships_path(current_user), id: "nav-chatrooms", class: "nav-link", data: { turbolinks: false } %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", user_path(current_user), id: "nav-profile", class: "nav-link", data: { turbolinks: false } %>
          </li>
        </ul>
      </div>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown nav-hello">
            <p>Hello, <%= current_user.first_name + " " + current_user.last_name %>!</p>
            <%= cl_image_tag display_photo(current_user), aspect_ratio: 1, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
