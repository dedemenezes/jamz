<div class="chat-header container">


  <p>Chats <%= chat_memberships.size %></p>
  <div class="chat-content" id="chat-target">
    <ul>
      <% chat_memberships.each do |chat_membership| %>
        <li>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar" %>
            <% memberships = ChatMembership.where(chatroom: chat_membership.chatroom_id) %>
            <% if memberships.first.user.username == current_user.username %>
              <p id="chat-action"><%= current_user.username %><% current_user.id %></p>
            <% else %>
             <p id="chat-action" data-id="<%= memberships.first.user.id %>"><%= memberships.first.user.username %></p>
            <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>